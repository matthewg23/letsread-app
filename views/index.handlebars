<div id="home">
  <div class="container">

    <div class="row">
      <div class="col-12">
        <nav class="navbar navbar-dark bg-dark">
          <h1>{{msg}}</h1>
            <h3>Let's Read!</h3>
        </nav>
        </div>
    </div>

    <div class="row">
      <div class="col-8 offset-2">
        
        <h1>{{msg}}</h1>
        <h3>Let's Read!</h3>

        <form class="clearfix mb-4" action="POST">

          <div class="form-group">
            <label for="book-title">Enter a book title</label>
            <input type="text" id="book-title" class="form-control" aria-describedby="book-title" placeholder="Enter a book title">
          </div>

          <div class="form-group">
            <label for="book-title">Enter a book author</label>
            <input type="text" id="book-author" class="form-control" aria-describedby="book-author" placeholder="Enter the book's author">
          </div>

          <div class="form-group">
            <label for="book-title">Enter the book ISBN number</label>
            <input type="text" id="book-isbn" class="form-control" aria-describedby="book-isbn" placeholder="Enter the book ISBN number">
          </div>

          <div class="form-group">
            <label for="book-review">Write a review for the book</label>
            <textarea class="form-control" id="book-review" aria-describedby="book-review" placeholder="Write a review for the book"></textarea>
          </div>

          <button id="submit" class="btn btn-primary float-right">Submit</button>

        </form>


        <h3>Books:</h3>
        <ul id="book-list" class="list-group">
          {{#each books}}
          <li data-id="{{this.id}}" class="list-group-item">
            <a href="book/{{this.id}}">{{this.title}}</a>
            <p>Author: {{this.author}}</p>
            <img src="http://covers.openlibrary.org/b/isbn/{{this.isbn}}-M.jpg" />
            <p>Review: {{this.review}}</p>
             <button class="btn btn-danger float-right delete">ï½˜</button>
          </li>
          {{/each}}
        </ul>



      </div>
    </div>
  </div>
</div>
